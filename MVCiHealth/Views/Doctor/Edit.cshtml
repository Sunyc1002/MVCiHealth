@using MVCiHealth.Models;
@model DOCTOR
@{
	ViewBag.Title = "doctors-setinfo";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<div style="text-align:center; ">
	<h1>Set Information</h1>
	<h2>welcome: doctor  @(ViewData.Model.DOCTOR_NM)</h2>
</div>
<br><br>
<div class="row">

	<div class="col-md-4"></div>
		<button class="btn btn-default" onclick="$('input').removeAttr('readonly'),$('#ok').removeAttr('hidden');">
			EDIT
		</button>

		<div class="col-md-4" id="setinfo" >
		<form method="post">
			<div class="form-group">
				<label> Name</label>
				<input type="text" class="form-control" id="Name" placeholder="name" value="@(ViewData.Model.DOCTOR_NM)"  name="DOCTOR_NM">
			</div>
			<div class="form-group">
				<label> Gender</label>
				<input type="text" class="form-control" id="Gender" placeholder="gender" value="@(ViewData.Model.GENDER)" name="GENDER">
			</div>
			<div class="form-group">
				<label> age</label>
				<input type="text" class="form-control" id="Age" placeholder="Age" value="@(ViewData.Model.AGE)" name="AGE">
			</div>
			<div class="form-group">
				<label> Phone number</label>
				<input type="text" class="form-control" id="InputTel" placeholder="Phone Number" value="@(ViewData.Model.TEL)" name="TEL">
			</div>
			<!--
			<div class="form-group">
				<label> Password</label>
				<input type="password" class="form-control" id="InputPwd" placeholder="password">
			</div>
			<div class="form-group">
				<label> Repeat Password</label>
				<input type="password" class="form-control" id="RepeatInputPwd" placeholder="repeat password">
			</div>
			-->	

			<div class="form-group">
				<label> Section</label>
				<input type="text" class="form-control" id="Section" placeholder="Section" value="@(ViewData.Model.SECTION_ID)" name="SECTION_ID">
			</div>			
			<div class="form-group">
				<label> working years</label>
				<input type="text" class="form-control" id="InputWorkingYears" placeholder="Working years">
			</div>		
			
			<div class="form-group">
				<label> Skilled </label>
				<input type="text" class="form-control" id="InputSkilled" placeholder="Skilled diseases" value="@(ViewData.Model.DISEASE_ID)" name="DISEASE_ID">
			</div>		
			<div class="form-group">
				<label> Introduction</label>
				<input type="text" class="form-control" id="InputIntroduction" placeholder="Introduction" value="@(ViewData.Model.INTRODUCTION)" name="INTRODUCTION">
			</div>
			<div class="form-group">
				<label>Photo input</label>
				<input type="file" id="InputPhoto" name="PHOTO_URL">
				<img src="@(ViewData.Model.PHOTO_URL)">
				<p class="help-block">Click to upload your photo</p>
			</div>			
			<div id="ok" hidden>
				<button type="submit" class="btn btn-default" >
					确定
				</button>
				<button class="btn btn-default" onclick="location.href='index'">
					放弃
				</button>
			</div>
		</form>
		</div>		



</div>
@section scripts{
	<script type="text/javascript">

		$(document).ready(function (){
			$('input').attr('readonly','readonly');

		});
	</script>
}