@using MVCiHealth.Models;
@model USERINFO
<div class="row">
    <div id="loginModal" class="modal show" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="text-center text-primary">登录</h1>
                </div>
                <div class="modal-body">
                    <form id="loginform" action="/Account/Login" class="form center-block" method="post" target="_parent">
                        <input type="hidden" name="Count" value="@(ViewBag.Count??0)" />
                        <div class="form-group">
                            <input type="text" name="LOGIN_NM" class="form-control input-lg" placeholder="登录名" value="@(Model!=null?Model.LOGIN_NM??"":"")">
                        </div>
                        <div class="form-group">
                            <input type="password" name="PASSWORD" class="form-control input-lg" placeholder="密码">
                        </div>
                        @{ if (ViewBag.ShowVCode == true)
                            {
                                <div class="form-group">
                                    <input type="text" name="VCode" class="form-control input-lg" placeholder="验证码">
                                    <img id="imgCode" src="/Account/GetVCode/@DateTime.Now.ToBinary()" width="100" alt="点击切换验证码！" />
                                </div>
                            }
                        }
                        <div class="form-group">
                            @Html.ValidationSummary()
                        </div>

                        <div class="form-group">
                            <button id="login" name="login" type="submit" class="btn btn-primary btn-lg btn-block">立刻登录</button>
                            <span><a href="/Account/ForgetPassword">找回密码</a></span>
                            <span><a href="/Account/Register" class="pull-right">注册</a></span>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#imgCode').bind('click', function () {
                this.src = '/Account/GetVCode/' + Math.random();
                $('#VCode').val('');
            });
        });
    </script>
}

