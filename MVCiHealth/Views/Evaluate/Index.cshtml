@{
    ViewBag.Title = "Evaluate Page";
}
<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-4">
        <img src="~/Resources/Images/Evaluate/doctor.png" alt="显示当前医生的照片" class="img-rounded" >
        <input id="score" value="0" type="number" class="rating" readonly max=5 step=0.1 data-size="md"> 
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    医生评价
                </h3>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label for="doctorName" class="col-sm-2 control-label">医生姓名</label>
                        <div class="col-sm-5">
                            <input type="text" id="doctorId" placeholder="A医生" readonly />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="evaluateRate">评价星级</label>
                        <input id="evaluateRate" value="0" type="number" class="rating" max=5 step=0.1 data-size="md">
                    </div>
                    <div class="form-group">
                        <label for="evaluateDetail">评价内容</label>
                        <textarea id="evaluateDetail" placeholder="说点什么吧~(不超过140字)" class="form-control" rows="5"></textarea>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default" id="submitBt">提交</button>
                        </div>
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="button" class="btn btn-danger" id="cancelBt">取消</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
       
</div>


