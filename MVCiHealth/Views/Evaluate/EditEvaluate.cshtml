@using MVCiHealth.Models
@model V_EVALUATION
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "EditEvaluate Page";
}
<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-4">
        <img src="~/Resources/Images/Evaluate/doctor.png" alt="显示当前医生的照片" class="img-rounded">
        <input id="score" value="@(ViewData.Model.LEVEL)" type="number" class="rating" readonly="readonly" data-size="xs">
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    医生评价
                </h3>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" role="form" method="post" data-ajax="true" data-ajax-method="post">
                    <div class="form-group">
                        <label for="doctorName" class="col-sm-2 control-label">医生姓名</label>
                        <label id="doctorName">@(ViewData.Model.DOCTOR_NM)</label>
                    </div>
                    <div class="form-group">
                        <label for="doctorID" class="col-sm-2 control-label">医生ID</label>
                        <input id="doctorID" name="doctorID" type="hidden"
                        <label id="doctorID">@(ViewData.Model.DOCTOR_ID)</label>
                    </div>
                    <div class="form-group">
                        <label for="evaluateRate" class="col-sm-2 control-label">评价星级</label>
                        <input id="evaluateRate" value="@(ViewData.Model.RATE)" type="number" class="rating" data-size="xs">
                    </div>
                    <div class="form-group">
                        <label for="evaluateDetail" class="col-sm-2 control-label">评价内容</label>
                        <textarea id="evaluateDetail" placeholder="说点什么吧~(不超过140字)" class="form-control" rows="5"></textarea>
                    </div>
                </form>
                <div class="btn-group center-block">
                    <button type="submit" class="btn btn-default" id="submitBt">提交</button>
                    <button type="button" class="btn btn-danger" id="cancelBt">取消</button>
                </div>
            </div>
        </div>
    </div>
</div>

